#!/bin/bash

####################################
# Tear Down Ethernet bridge on Linux
####################################

# Define Bridge Interface
br="{{ openvpn_server_interface_type_bridge }}"

# Define list of TAP interfaces to be bridged together
tap="{{ openvpn_server_interface_type_tap }}"

# Define physical ethernet interface to be bridged
# with TAP interface(s) above.
eth="{{ openvpn_server_interface_name }}"
eth_ip="{{ openvpn_server_lan_ip }}"
eth_netmask="{{ openvpn_server_netmask }}"
eth_gateway="{{ openvpn_server_interface_br_gw }}"
eth_broadcast="{{ openvpn_server_net_broadcast }}"

/usr/sbin/ifconfig $br down
/usr/sbin/brctl delbr $br

for t in $tap; do
    /usr/sbin/openvpn --rmtun --dev $t
    /usr/sbin/iptables -D INPUT -i $t -j ACCEPT
done

/usr/sbin/ifconfig $eth $eth_ip netmask $eth_netmask broadcast $eth_broadcast
/usr/sbin/route add default gw $eth_gateway $eth