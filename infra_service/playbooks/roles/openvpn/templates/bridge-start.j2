#!/bin/bash

#################################
# Set up Ethernet bridge on Linux
# Requires: bridge-utils
#################################

# Define Bridge Interface
br="{{ openvpn_server_interface_type_bridge }}"

# Define list of TAP interfaces to be bridged,
# for example tap="tap0 tap1 tap2".
tap="{{ openvpn_server_interface_type_tap }}"

# Define physical ethernet interface to be bridged
# with TAP interface(s) above.
eth="{{ openvpn_server_interface_name }}"
eth_ip="{{ openvpn_server_lan_ip }}"
eth_netmask="{{ openvpn_server_netmask }}"
eth_gateway="{{ openvpn_server_interface_br_gw }}"
eth_broadcast="{{ openvpn_server_net_broadcast }}"

for t in $tap; do
    /usr/sbin/openvpn --mktun --dev $t
done

/usr/sbin/brctl addbr $br
/usr/sbin/brctl addif $br $eth

for t in $tap; do
    /usr/sbin/brctl addif $br $t
done

for t in $tap; do
    /usr/sbin/ifconfig $t 0.0.0.0 promisc up
    /usr/sbin/iptables -A INPUT -i $t -j ACCEPT
done

iptables -A INPUT -i $br -j ACCEPT
iptables -A FORWARD -i $br -j ACCEPT

/usr/sbin/ifconfig $eth 0.0.0.0 promisc up

/usr/sbin/ifconfig $br $eth_ip netmask $eth_netmask broadcast $eth_broadcast
/usr/sbin/route add default gw $eth_gateway $br